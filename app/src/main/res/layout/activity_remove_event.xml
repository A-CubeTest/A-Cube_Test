<?xml version="1.0" encoding="UTF-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tab_games.NewLink">

    <TextView
        android:id="@+id/activity_remove_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="70dp"
        android:text="@string/game"
        android:textAlignment="textEnd"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/activity_remove_text_name"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/activity_remove_name"
        android:layout_marginStart="50dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/activity_remove_name"
        android:textAlignment="textStart"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/activity_remove_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_remove_name"
        android:layout_alignStart="@+id/activity_remove_name"
        android:layout_marginStart="0dp"
        android:layout_marginTop="35dp"
        android:text="@string/event"
        android:textAlignment="textEnd"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/activity_remove_text_event"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_remove_text_name"
        android:layout_alignStart="@+id/activity_remove_text_name"
        android:layout_marginStart="0dp"
        android:layout_marginTop="35dp"
        android:textAlignment="textStart"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/activity_remove_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_remove_event"
        android:layout_alignStart="@+id/activity_remove_event"
        android:layout_marginStart="0dp"
        android:layout_marginTop="35dp"
        android:text="@string/action"
        android:textAlignment="textEnd"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/activity_remove_action_text"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_remove_text_event"
        android:layout_alignStart="@+id/activity_remove_text_event"
        android:layout_marginStart="0dp"
        android:layout_marginTop="35dp"
        android:textAlignment="textStart"
        android:textSize="18sp" />

    <Button
        android:id="@+id/activity_remove_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:text="@string/delete" />

</RelativeLayout>