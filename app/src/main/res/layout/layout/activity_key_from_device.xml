<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".External_Devices.KeyFromDevice"
    android:orientation="vertical">

    <TextView
        android:id="@+id/nuovoPulsanteTesto"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="@string/nuovoPulsante"
        android:textAlignment="center"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/Azione"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="60dp"
        android:text="@string/azione"
        android:textSize="18dp"
        android:layout_below="@id/nuovoPulsanteTesto"
        android:textAlignment="textEnd"
        />

    <TextView
        android:id="@+id/Pulsante"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/Azione"
        android:layout_marginTop="20dp"
        android:text="@string/pulsante"
        android:textSize="18dp"
        android:layout_below="@id/Azione"
        android:textAlignment="textEnd" />

    <TextView
        android:id="@+id/Dispositivo"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/Pulsante"
        android:layout_marginTop="20dp"
        android:text="@string/dispositivo"
        android:textSize="18dp"
        android:layout_below="@id/Pulsante"
        android:textAlignment="textEnd" />

    <TextView
        android:id="@+id/tipo_azione"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/Azione"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="0dp"
        android:layout_toRightOf="@id/Azione"
        android:textSize="18dp"
        android:hint="@string/tipo_azione"
        android:layout_marginStart="10dp"
         />

    <TextView
        android:id="@+id/codice_pulsante"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Azione"
        android:layout_alignEnd="@+id/tipo_azione"
        android:layout_alignStart="@id/tipo_azione"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="0dp"
        android:textSize="18dp"
        android:hint="codice pulsante" />

    <TextView
        android:id="@+id/codice_dispositivo"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/codice_pulsante"
        android:layout_alignStart="@id/codice_pulsante"
        android:layout_alignEnd="@+id/tipo_azione"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="-12dp"
        android:hint="codice dispositivo"
        android:textSize="18dp" />

    <Button
        android:id="@+id/salva"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="86dp"
        android:text="Salva"
        android:focusable="false"
        android:onClick="saveExtKey"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>