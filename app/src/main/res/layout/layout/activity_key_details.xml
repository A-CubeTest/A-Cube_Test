<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".External_Devices.KeyDetails">

    <TextView
        android:id="@+id/detail_user_device_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="85dp"
        android:layout_marginTop="100dp"
        android:text="Dispositivo"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/detail_id_device"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/detail_user_device_name"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="1dp"
        android:layout_below="@id/detail_user_device_name"
        android:text="ID dispositivo"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/detail_device_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/detail_user_device_name"
        android:layout_marginTop="20dp"
        android:layout_below="@id/detail_id_device"
        android:text="Nome dispositivo"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/detail_user_key_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/detail_user_device_name"
        android:layout_marginTop="20dp"
        android:layout_below="@id/detail_device_name"
        android:text="Nome Pulsante"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/detail_key_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/detail_user_device_name"
        android:layout_marginTop="20dp"
        android:layout_below="@id/detail_user_key_name"
        android:text="Codice pulsante"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/detail_action_key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/detail_user_device_name"
        android:layout_marginTop="20dp"
        android:layout_below="@id/detail_key_code"
        android:text="Azione pulsante"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/detail_user_dev_name"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/detail_user_device_name"
        android:layout_marginStart="180dp"
        android:layout_marginTop="0dp"
        android:text="TextView"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/detail_id_dev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/detail_user_dev_name"
        android:layout_alignTop="@id/detail_id_device"
        android:text="TextView"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/detail_dev_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/detail_user_dev_name"
        android:layout_alignTop="@+id/detail_device_name"
        android:text="TextView"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/detail_key_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/detail_user_dev_name"
        android:layout_alignTop="@+id/detail_user_key_name"
        android:text="TextView"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/detail_key_c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/detail_user_dev_name"
        android:layout_alignTop="@+id/detail_key_code"
        android:text="TextView"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/detail_action_k"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/detail_dev_name"
        android:layout_alignTop="@+id/detail_action_key"
        android:text="TextView"
        android:textSize="18dp"/>

    <Button
        android:id="@+id/deleteKey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="62dp"
        android:text="Elimina Pulsante" />

</RelativeLayout>