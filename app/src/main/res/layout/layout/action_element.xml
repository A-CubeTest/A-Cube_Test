<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/action_element_dev"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="45dp"
        android:layout_marginTop="23dp"
        android:text="Dispositivo"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/action_element_nameDev"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/action_element_dev"
        android:layout_marginStart="0dp"
        android:layout_below="@id/action_element_dev"
        android:layout_marginTop="10dp"
        android:text="Nome"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/action_element_action"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/action_element_dev"
        android:layout_marginStart="0dp"
        android:layout_below="@id/action_element_nameDev"
        android:layout_marginTop="10dp"
        android:text="Azione"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/action_element_device"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/action_element_dev"
        android:layout_marginLeft="160dp"
        android:layout_marginBottom="0dp"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/action_element_user_device_name"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/action_element_device"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="9dp"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/action_element_act"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/action_element_user_device_name"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="9dp"
        android:textSize="18dp" />

</RelativeLayout>