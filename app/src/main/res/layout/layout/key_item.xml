<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/element_key"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="45dp"
        android:layout_marginTop="23dp"
        android:text="Pulsante"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/element_action"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/element_key"
        android:layout_marginStart="0dp"
        android:layout_below="@id/element_key"
        android:layout_marginTop="10dp"
        android:text="Azione"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/key_item"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/element_key"
        android:layout_marginLeft="160dp"
        android:layout_marginBottom="0dp"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/action_item"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/key_item"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="9dp"
        android:textSize="18dp" />

</RelativeLayout>